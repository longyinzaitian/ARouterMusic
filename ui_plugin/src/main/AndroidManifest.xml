<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sohuvideo.ui_plugin">

    <application
        android:name=".PluginApplication"
        android:allowBackup="true"
        android:label="@string/app_name">

        <activity android:name=".ui.PGCListActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.PlayerActivity"
            android:configChanges="keyboardHidden|orientation|navigation|screenSize"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"/>
        <activity android:name=".ui.SohuStreamActivity"
            android:configChanges="keyboardHidden|orientation|navigation|screenSize"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"/>
        <activity
            android:name="com.sohu.commonadsdk.webview.SohuAdActivity"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <service
            android:name="com.sohuvideo.player.statistic.LogService"
            android:exported="false"
            android:label="CoreService" />

        <meta-data
            android:name="SOHUVIDEO_CHANNEL"
            android:value="44260"/>
        <meta-data
            android:name="SOHUVIDEO_KEY"
            android:value=""/>
    </application>

</manifest>